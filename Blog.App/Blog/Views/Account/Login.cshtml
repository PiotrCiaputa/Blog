@model LoginViewModel

@{
    
}

<div class="container">
    <div class="row">
        <div class="col-lg">
            <h1 class="text-center text-uppercase"><strong>Zaloguj się</strong></h1>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="text-center">
                    <label>Nazwa użytkownika</label><br />
                    <input asp-for="UserName" /><br />
                    <label>Hasło</label><br />
                    <input asp-for="Password" /><br /><br />
                    <input type="submit" value="Zaloguj się" class="btn btn-primary text-uppercase" />
                    <a asp-controller="Account" asp-action="Register">Zarejestruj się</a>
                </div>
            </form>
        </div>
    </div>
</div>


