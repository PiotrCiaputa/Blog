@model IEnumerable<Category>

@{
    
}

<h3><strong>Bieżące kategorie</strong></h3>
<div>
    <ul>
        @foreach (var category in Model)
        {
            <li>
                <a>
                    @category.Name
                </a>
                <a asp-controller="Panel" asp-action="EditCategory" asp-route-id="@category.ID">
                    Edytuj
                </a>
                <a asp-controller="Panel" asp-action="DeleteCategory" asp-route-id="@category.ID">
                    Usuń
                </a>
            </li>
        }
    </ul>
</div>

