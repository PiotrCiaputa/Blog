@model Category

@{
    
}
<div class="container">
    <div class="row">
        <div class="col-lg add-category">
            <h2 class="text-center text-uppercase"><strong>Dodaj kategorię</strong></h2>
            <form asp-controller="Panel" asp-action="AddCategory" method="post" class="add-category-form">
                <div class="form-group">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="text-center">
                    <input type="submit" value="Dodaj kategorię" class="btn btn-danger delete-button" />
                </div>
            </form>
            <br />
            <div>
                <a asp-controller="Panel" asp-action="Index" class="btn btn-warning text-center text-uppercase button-return-look">Powrót do strony index</a>
            </div>
        </div>
    </div>
</div>
